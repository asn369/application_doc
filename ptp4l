 pmc 'get PARENT_DATA_SET' 'get CURRENT_DATA_SET' 'get PORT_DATA_SET' 'get TIME_STATUS_NP' -i eth0
 ptp4l -i eth0 -f /etc/ptp4l.conf -m -l 7
 phc2sys -s /dev/ptp0 -f /etc/ptp4l.conf -m
 phc2sys -s /dev/ptp0 -c CLOCK_REALTIME -O 0 -m


cat  /usr/lib/systemd/system/ptp4l.service
[Service]
Type=simple
EnvironmentFile=-/etc/sysconfig/ptp4l
ExecStart=/usr/sbin/ptp4l $OPTIONS             # OPTIONS === /etc/sysconfig/ptp4l
