ip rule add from 10.252.130.26 table vrf1
ip route add 10.254.141.186 dev enp8s0 table vrf1 scope link
ip route add default via 10.254.141.186 dev enp8s0 table vrf1

vim /etc/NetworkManager/dispatcher.d/99-custom-routes.sh

#!/bin/bash
IFACE="$1"
STATUS="$2"

if [ "$IFACE" = "enp8s0" ] && [ "$STATUS" = "up" ]; then
    ip rule add from 10.252.130.26 table vrf1
    ip route add 10.254.141.186 dev enp8s0 table vrf1 scope link
    ip route add default via 10.254.141.186 dev enp8s0 table vrf1
fi
sudo chmod +x /etc/NetworkManager/dispatcher.d/99-custom-routes.sh // permanent

#!/bin/bash
IFACE="$1"
STATUS="$2"

if { [ "$IFACE" = "enp1s0" ] || [ "$IFACE" = "enp1s0d1" ]; } && [ "$STATUS" = "up" ]; then
    # VRF1 configuration
    ip rule add from 10.252.130.26 table vrf1
    ip route add 10.254.141.186 dev enp1s0 table vrf1 scope link
    ip route add default via 10.254.141.186 dev enp1s0 table vrf1

    # VRF2 configuration
    ip rule add from 10.252.130.24 table vrf2
    ip route add 10.254.141.186 dev enp1s0d1 table vrf2 scope link
    ip route add default via 10.254.141.186 dev enp1s0d1 table vrf2
fi

